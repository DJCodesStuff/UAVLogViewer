# Google Gemini API Configuration
# Add your Google API key here
GOOGLE_API_KEY=
GEMINI_MODEL=gemini-2.0-flash

# Qdrant Vector Database Configuration
QDRANT_URL=
QDRANT_API_KEY=

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=True

# CORS Settings (allow frontend Docker container)
CORS_ORIGINS=http://localhost:8080,http://0.0.0.0:8080

# Session Settings
SESSION_TIMEOUT_HOURS=24
MAX_SESSIONS=100

# Logging
LOG_LEVEL=INFO
ENABLE_WEB_GROUNDING=true

# RAG/web settings
ARDUPILOT_DOCS_URL=https://ardupilot.org/plane/docs/logmessages.html
WEB_TOOL_ENABLED=true
WEB_TOOL_TRIGGERS=use web,search web,search docs,from docs,duckduckgo,ddg
WEB_TOOL_MAX_CHARS=8000
WEB_SEARCH_SITE_LIMIT=ardupilot.org

# RAG session
RAG_SESSION_TOP_K=20
RAG_DOCS_TOP_K=5
RAG_MAX_CHUNKS=25